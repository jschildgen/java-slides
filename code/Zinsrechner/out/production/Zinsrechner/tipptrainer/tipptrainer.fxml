<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tipptrainer.TipptrainerController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label fx:id="ausgabe" text="Fang einfach an zu tippen!"></Label>
    </top>
    <center>
        <TextArea fx:id="eingabe" onKeyReleased="#onEingabe" wrapText="true"></TextArea>
    </center>
    <bottom>
        <Button onAction="#reset" text="Neustart"></Button>
    </bottom>
</BorderPane>
